{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test-e2e-open-staging": "concurrently \"yarn workspace @nina/backend start:staging-test\" \"yarn workspace @nina/frontend test-e2e-open-staging\"",
    "start-common-typeorm": "concurrently --kill-others-on-fail \"yarn workspace @nina/common start\" \"yarn workspace @nina/typeorm start\"",
    "build:all": "yarn workspace @nina/common build && yarn workspace @nina/typeorm build && yarn workspace @nina/backend build"
  },
  "devDependencies": {
    "concurrently": "4.1.0"
  }
}
